@startuml Use Case Diagram - SKENA POS System

' ============================================
' SKENA Coffee Shop POS System
' Use Case Diagram
' ============================================

' Font and styling settings for better visibility
skinparam defaultFontSize 14
skinparam defaultFontName Arial
skinparam actorFontSize 16
skinparam usecaseFontSize 12
skinparam packageFontSize 16
skinparam dpi 150
skinparam shadowing false

left to right direction

title <size:24>SKENA Coffee Shop POS System</size>\n<size:18>Use Case Diagram</size>

' Actors
actor "Manager" as manager
actor "Cashier" as cashier
actor "Customer" as customer

rectangle "SKENA Coffee Shop POS System" {

    ' ========== Product Management ==========
    package "Product Management" #AliceBlue {
        usecase "Add Product" as UC1
        usecase "Edit Product" as UC2
        usecase "Delete Product" as UC3
        usecase "View Products" as UC4
        usecase "Filter Products" as UC5
    }

    ' ========== Customer Management ==========
    package "Customer Management" #Honeydew {
        usecase "Add Customer" as UC6
        usecase "Edit Customer" as UC7
        usecase "Delete Customer" as UC8
        usecase "Search Customer" as UC9
        usecase "View Customers" as UC10
        usecase "Add Loyalty Points" as UC11
    }

    ' ========== Point of Sale ==========
    package "Point of Sale" #LemonChiffon {
        usecase "Add to Cart" as UC12
        usecase "Remove from Cart" as UC13
        usecase "Update Quantity" as UC14
        usecase "Select Customer" as UC15
        usecase "Redeem Points" as UC16
        usecase "Complete Transaction" as UC17
        usecase "Cancel Transaction" as UC18
        usecase "View History" as UC19
    }

    ' ========== Data Management ==========
    package "Data Management" #Lavender {
        usecase "Save Data" as UC20
        usecase "Load Data" as UC21
    }

    ' ========== Auto Process ==========
    usecase "Earn Points" as UC22 #PaleGreen

}

' ========== Manager Relationships ==========
manager --> UC1
manager --> UC2
manager --> UC3
manager --> UC4
manager --> UC5
manager --> UC6
manager --> UC7
manager --> UC8
manager --> UC9
manager --> UC10
manager --> UC11
manager --> UC20
manager --> UC21

' ========== Cashier Relationships ==========
cashier --> UC4
cashier --> UC9
cashier --> UC10
cashier --> UC12
cashier --> UC13
cashier --> UC14
cashier --> UC15
cashier --> UC16
cashier --> UC17
cashier --> UC18
cashier --> UC19

' ========== Customer Relationships ==========
customer <.. UC15 : participates
customer <.. UC16 : participates
customer <.. UC22 : receives

' ========== Include/Extend ==========
UC17 ..> UC22 : <<include>>
UC17 ..> UC16 : <<extend>>
UC16 ..> UC15 : <<include>>

@enduml
